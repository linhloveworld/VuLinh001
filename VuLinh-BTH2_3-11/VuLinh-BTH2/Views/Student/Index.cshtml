@{
}
@model IEnumerable<VuLinh_BTH2.Models.Student>
<p>
    <a class="btn btn-success" asp-action="Create">Create a new Student</a>
</p>
<table class="table table-all">
    <tr>
        <th>Student Id</th>
        <th>Student Name</th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(m=>item.StudentID)</td>
        <td>@Html.DisplayFor(m=>item.StudentName)</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.StudentID">Sua</a>
            <a asp-action="Delete" asp-route-id="@item.StudentID">Xoa</a>
        </td>
    </tr>
}
</table>